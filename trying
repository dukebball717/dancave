<body>
<h1>Man Cave Live Scores</h1>
<div id="scores" class="scores-container">Loading...</div>

<script>
const API_KEY = '123'; // Your TheSportsDB API key
const LEAGUES = ['NFL','MLB','NCAAF']; // Rotating leagues: NFL, MLB, FBS College Football
let currentLeagueIndex = 0;

async function loadScores() {
  const league = LEAGUES[currentLeagueIndex];
  const scoresDiv = document.getElementById('scores');
  scoresDiv.innerHTML = `<div class="league-title">${league} Live Scores</div>`;

  try {
    const res = await fetch(`https://www.thesportsdb.com/api/v1/json/${API_KEY}/livescore.php?l=${league}`);
    const data = await res.json();

    if (data.events) {
      for (const event of data.events) {
        const div = document.createElement('div');
        div.className = 'game';

        const homeTeam = document.createElement('div');
        homeTeam.className = 'team';
        homeTeam.innerHTML = `<img src="${event.strHomeTeamBadge || ''}" alt="Home Logo"><div>${event.strHomeTeam}</div>`;

        const awayTeam = document.createElement('div');
        awayTeam.className = 'team';
        awayTeam.innerHTML = `<img src="${event.strAwayTeamBadge || ''}" alt="Away Logo"><div>${event.strAwayTeam}</div>`;

        const score = document.createElement('div');
        score.className = 'score';
        score.textContent = `${event.intHomeScore ?? 0} - ${event.intAwayScore ?? 0}`;

        div.appendChild(homeTeam);
        div.appendChild(score);
        div.appendChild(awayTeam);
        scoresDiv.appendChild(div);
      }
    } else {
      scoresDiv.innerHTML += '<p style="font-size:1.5em;color:#777;">No live games right now.</p>';
    }
  } catch (err) {
    scoresDiv.innerHTML = '<p style="color:red;">Error fetching scores. Check API key or connection.</p>';
  }

  currentLeagueIndex = (currentLeagueIndex + 1) % LEAGUES.length;
}

loadScores();
setInterval(loadScores, 60000); // Refresh every 60 seconds
</script>
</body>
</html>